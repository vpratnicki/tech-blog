<article class="post">
  <div class="title">
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
  </div>
  <div class="meta">
    {{post_text}}<br/>

    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    {{comments.length}}
    {{format_plural "comment" comments.length}}
  </div>
</article>