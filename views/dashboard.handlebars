<section class="jumbotron card-color">
    <h2>Create New Post</h2>
    <hr class="my-4">
    
    <form class="new-post-form form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" class="form-control" id="post-title" placeholder="Enter post title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <textarea id="post-text" name="post-text" placeholder="Enter your post text"></textarea>
      </div>
      
      <button type="submit" class="btn btn-light">Create</button>
    </form>
  </section>

  {{#if posts.length}}
  <section>
    <h2 class="text-center">Your Posts</h2>
    <div class="card-columns">
      {{#each posts as |post|}}
      <div class="card-body bg-light m-3">
        {{> post-info post}}  
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post Â»</a>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

  <script src="/javascript/add-post.js"></script>